<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/product_detail_image_height"
        android:background="@drawable/skeleton_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_large"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_marginTop="@dimen/settings_padding"
        android:orientation="vertical">

        <View
            android:layout_width="120dp"
            android:layout_height="@dimen/skeleton_default_text_height"
            android:layout_marginEnd="@dimen/margin_large"
            android:background="@drawable/skeleton_background"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/skeleton_default_text_height"
            android:layout_marginEnd="@dimen/margin_extra_large"
            android:layout_marginTop="@dimen/margin_medium"
            android:background="@drawable/skeleton_background"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/settings_padding"
            android:background="@color/list_divider"/>

        <View
            android:layout_width="160dp"
            android:layout_height="@dimen/skeleton_default_text_height"
            android:layout_marginTop="@dimen/settings_padding"
            android:background="@drawable/skeleton_background"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/skeleton_default_text_height_four_lines"
            android:layout_marginTop="@dimen/settings_padding"
            android:background="@drawable/skeleton_background"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/settings_padding"
            android:background="@color/list_divider"/>

        <View
            android:layout_width="160dp"
            android:layout_height="@dimen/skeleton_default_text_height"
            android:layout_marginTop="@dimen/settings_padding"
            android:background="@drawable/skeleton_background"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/skeleton_default_text_height_two_lines"
            android:layout_marginTop="@dimen/settings_padding"
            android:background="@drawable/skeleton_background"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/settings_padding"
            android:background="@color/list_divider"/>

    </LinearLayout>
</LinearLayout>
