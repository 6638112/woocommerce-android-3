<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.woocommerce.android.ui.refunds.RefundByItemsFragment">

        <LinearLayout
            style="@style/Woo.Card.WithoutPadding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/issueRefund_selectedItems"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Woo.TextAppearance.Title"
                    android:paddingStart="@dimen/card_padding_start"
                    android:paddingEnd="@dimen/card_padding_end"
                    app:layout_constraintBottom_toTopOf="@+id/issueRefund_products"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="5 items selected" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/issueRefund_selectAllButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Woo.Button"
                    android:text="@string/order_refunds_items_select_all"
                    android:textAllCaps="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/issueRefund_products"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:paddingStart="@dimen/card_padding_start"
                    android:paddingEnd="@dimen/card_padding_end"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/issueRefund_selectAllButton"
                    tools:itemCount="3"
                    tools:listitem="@layout/refunds_product_list_item"
                    tools:targetApi="lollipop"/>

           </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/card_padding_start"
                android:layout_marginEnd="@dimen/card_padding_end"
                android:layout_marginBottom="@dimen/card_item_padding_intra_double"
                android:background="@color/list_divider"
                app:srcCompat="@drawable/list_divider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/card_padding_start"
                android:paddingEnd="@dimen/card_padding_end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/issueRefund_lblSubtotal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/subtotal"
                    android:textAlignment="viewStart"
                    android:textAppearance="@style/Woo.Refunds.TextAppearance"/>

                <TextView
                    android:id="@+id/issueRefund_subtotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Woo.Refunds.TextAppearance"
                    tools:text="$45.00"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/issueRefund_discountSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/card_padding_start"
                android:paddingEnd="@dimen/card_padding_end"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/card_item_padding_intra_h"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/issueRefund_lblDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/discount"
                    android:textAppearance="@style/Woo.Refunds.TextAppearance"/>

                <TextView
                    android:id="@+id/issueRefund_discountItems"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/card_item_padding_intra_h"
                    android:layout_marginStart="@dimen/card_item_padding_intra_h"
                    android:layout_weight="1"
                    android:textAlignment="viewStart"
                    android:textAppearance="@style/Woo.Refunds.TextAppearance"
                    tools:text="(sale4theday, firstTime, anyothertime, blah)"/>

                <TextView
                    android:id="@+id/issueRefund_discountTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Woo.Refunds.TextAppearance"
                    tools:text="-$4.00"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/card_padding_start"
                android:paddingEnd="@dimen/card_padding_end"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/card_item_padding_intra_h">

                <TextView
                    android:id="@+id/issueRefund_lblTaxes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/taxes"
                    android:textAlignment="viewStart"
                    android:textAppearance="@style/Woo.Refunds.TextAppearance"/>

                <TextView
                    android:id="@+id/issueRefund_taxesTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Woo.Refunds.TextAppearance"
                    tools:text="$1.00"/>

            </LinearLayout>

            <View
                android:id="@+id/issueRefund_dividerBelowTaxes"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/card_padding_start"
                android:layout_marginEnd="@dimen/card_padding_end"
                android:layout_marginTop="@dimen/card_item_padding_intra_double"
                android:background="@color/list_divider"
                app:srcCompat="@drawable/list_divider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/card_padding_start"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/issueRefund_lblTotal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/order_refunds_products_refund"
                    android:textAlignment="viewStart"
                    android:textAppearance="@style/Woo.Refunds.TextAppearance.Bold"/>

                <androidx.appcompat.widget.AppCompatButton
                    style="@style/Woo.Button"
                    android:id="@+id/issueRefund_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    tools:text="$49.00" />

            </LinearLayout>

        </LinearLayout>

        <!-- Button: Next -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/issueRefund_btnNextFromItems"
            android:theme="@style/Woo.Button.Purple"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/card_item_padding_intra_double"
            android:layout_marginEnd="@dimen/card_item_padding_intra_double"
            android:layout_marginBottom="@dimen/card_padding_bottom"
            android:text="@string/order_refunds_next_button_title" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
