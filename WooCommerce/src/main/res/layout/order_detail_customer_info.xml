<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/customerInfo_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/customer_information"
        android:textAppearance="@style/Woo.OrderDetail.TextAppearance.Title"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/customerInfo_custName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/card_item_padding_intra_h"
        android:paddingBottom="@dimen/card_item_padding_intra_h"
        tools:text="Michelle Frederickson"
        android:textAppearance="@style/Woo.OrderDetail.TextAppearance"
        android:layout_below="@+id/customerInfo_label"
        android:layout_alignParentStart="true"/>

    <FrameLayout
        android:id="@+id/customerInfo_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/card_item_padding_intra_h"
        android:layout_marginBottom="@dimen/card_item_padding_intra_h"
        android:background="@color/list_divider"
        android:layout_below="@+id/customerInfo_custName"
        app:srcCompat="@drawable/list_divider"/>

    <TextView
        android:id="@+id/customerInfo_shippingLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/card_item_padding_intra_h"
        android:text="@string/order_shipping_details"
        android:textAppearance="@style/Woo.OrderDetail.TextAppearance.Label"
        android:layout_below="@+id/customerInfo_divider"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/customerInfo_shippingAddr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/card_item_padding_intra_h"
        android:layout_below="@+id/customerInfo_shippingLabel"
        android:textAppearance="@style/Woo.OrderDetail.TextAppearance"
        tools:text="123 Sesame Pl\nWarner, FL\nUnited States"/>

    <TextView
        android:id="@+id/customerInfo_emailAddrLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/card_item_padding_intra_h"
        android:text="@string/email_address"
        android:layout_below="@+id/customerInfo_shippingAddr"
        android:textAppearance="@style/Woo.OrderDetail.TextAppearance.Label"/>

    <TextView
        android:id="@+id/customerInfo_emailAddr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/card_item_padding_intra_h"
        android:textAppearance="@style/Woo.OrderDetail.TextAppearance"
        tools:text="email@example.com"
        android:layout_below="@+id/customerInfo_emailAddrLabel"
        android:drawableEnd="@drawable/ic_email"/>

    <!-- Collapsed View -->
    <LinearLayout
        android:id="@+id/customerInfo_moreLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingBottom="@dimen/card_item_padding_intra_h"
        android:layout_below="@+id/customerInfo_emailAddr">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/phone"
            android:textAppearance="@style/Woo.OrderDetail.TextAppearance.Label"/>

        <TextView
            android:id="@+id/customerInfo_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/card_item_padding_intra_h"
            tools:text="123-456-7890"
            android:drawableEnd="@drawable/ic_phone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/order_billing_details"
            android:textAppearance="@style/Woo.OrderDetail.TextAppearance.Label"/>

        <TextView
            android:id="@+id/customerInfo_billingDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="123 Sesame Pl\nWarner, FL 12345-6789\nUnited States"/>
    </LinearLayout>

    <!-- VIEW MORE Button -->
    <TextView
        android:id="@+id/customerInfo_viewMore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/card_item_padding_intra_h"
        android:paddingBottom="@dimen/card_item_padding_intra_h"
        android:drawableEnd="@drawable/ic_arrow_down"
        android:layout_below="@+id/customerInfo_moreLayout"
        android:text="@string/view_more"
        android:textAppearance="@style/Woo.TextAppearance.Button"/>
</merge>
