<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wc_purple">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="?attr/actionBarSize">

        <ImageView
            android:id="@+id/about_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            android:padding="@dimen/margin_extra_large"
            app:srcCompat="@drawable/woo_bubble_white"/>

        <TextView
            style="@style/Woo.About.Title"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_extra_large"
            android:text="@string/about_appname"/>

        <TextView
            android:id="@+id/about_version"
            style="@style/Woo.About.Label"
            android:text="@string/about_version"/>

        <TextView
            android:id="@+id/about_publisher"
            style="@style/Woo.About.Label"
            android:layout_marginTop="@dimen/margin_extra_large"
            android:text="@string/about_publisher"/>

        <TextView
            android:id="@+id/about_copyright"
            style="@style/Woo.About.Label"
            tools:text="Copyright"/>

        <TextView
            android:id="@+id/about_privacy"
            style="@style/Woo.About.Button"
            android:layout_marginTop="@dimen/margin_medium"
            android:text="@string/settings_privacy_policy_header"/>

        <TextView
            android:id="@+id/about_tos"
            style="@style/Woo.About.Button"
            android:text="@string/about_tos"/>

        <TextView
            android:id="@+id/about_url"
            style="@style/Woo.About.Label"
            android:layout_marginTop="@dimen/margin_extra_medium_large"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/about_url_text"/>
    </LinearLayout>
</RelativeLayout>
