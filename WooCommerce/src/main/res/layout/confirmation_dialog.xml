<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/confirmationDialog_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="8dp"
        android:duplicateParentState="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        tools:text="Refund $87.50"
        android:textAppearance="@style/Woo.TextAppearance.Title.Large.Bold" />

    <TextView
        android:id="@+id/confirmationDialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textAppearance="@style/Woo.TextAppearance.Large"
        android:textColor="@color/dialog_content_text_color"
        tools:text="Are you sure you want to issue a refund? This can't be undone."
        android:layout_marginTop="@dimen/card_item_padding_intra_h"
        />

</LinearLayout>
