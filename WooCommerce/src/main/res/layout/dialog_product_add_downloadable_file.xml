    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/product_add_downloadable_title"
        style="@style/Woo.Card.Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/product_downloadable_add_bottomsheet_header"
        android:textColor="@color/color_on_surface_medium" />

    <include
        android:id="@+id/product_add_downloadable_sources"
        layout="@layout/layout_file_picker_sources" />

</LinearLayout>
