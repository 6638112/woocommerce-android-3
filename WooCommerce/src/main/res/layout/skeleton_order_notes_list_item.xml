<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/skeleton_order_note_item_height"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/margin_large"
    android:paddingTop="@dimen/margin_large">

    <View
        android:layout_width="@dimen/order_note_icon"
        android:layout_height="@dimen/order_note_icon"
        android:background="@drawable/skeleton_background_oval"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_large"
        android:layout_marginEnd="@dimen/card_item_padding_intra_h"
        android:layout_marginStart="@dimen/card_section_padding_h"
        android:background="@drawable/skeleton_background"/>

</LinearLayout>
