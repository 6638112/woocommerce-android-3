<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorSecondary">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textColor="@color/color_on_secondary"
        android:padding="@dimen/minor_100"
        android:text="@string/offline_message"
        android:layout_gravity="center"
        app:drawableTint="@color/color_on_secondary"
        app:drawableTintMode="src_atop"
        app:drawableStartCompat="@drawable/ic_offline" />
</FrameLayout>
