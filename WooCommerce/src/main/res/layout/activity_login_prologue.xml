<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/wc_purple"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/image_prologue"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/margin_medium_large"
        android:layout_marginRight="@dimen/margin_medium_large"
        android:layout_weight="1"
        android:scaleType="fitEnd"
        app:srcCompat="@drawable/ic_woo_login_screen_with_bleed"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card_bgColor"
        android:elevation="@dimen/card_elevation"
        android:orientation="horizontal"
        android:padding="@dimen/margin_extra_large">

        <ImageView
            android:id="@+id/image_jetpack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_jetpack_icon"/>

        <TextView
            android:id="@+id/text_jetpack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_toEndOf="@+id/image_jetpack"
            android:text="@string/login_jetpack_required"/>

        <Button
            android:id="@+id/button_login_jetpack"
            style="@style/Woo.ButtonPurple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_jetpack"
            android:layout_marginTop="@dimen/margin_large"
            android:padding="@dimen/margin_extra_large"
            android:text="@string/login_with_jetpack"/>
    </RelativeLayout>

</LinearLayout>
