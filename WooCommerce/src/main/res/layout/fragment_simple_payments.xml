<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_surface"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color" />

        <!-- Custom amount -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/major_100"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textCustomAmountLabel"
                style="@style/Woo.Card.Body.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableStart="@drawable/ic_gridicons_money"
                android:drawablePadding="@dimen/major_100"
                android:text="@string/simple_payments_custom_amount" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textCustomAmount"
                style="@style/Woo.Card.Body.Bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="end"
                tools:text="$40.00" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/major_100"
            android:background="@color/divider_color" />

        <!-- Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textEmail"
                style="@style/Woo.Card.Body.High"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/email" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editEmail"
                style="@style/Woo.TextInputEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="end"
                android:hint="@string/simple_payments_edit_email_hint"
                android:inputType="textEmailAddress"
                app:errorEnabled="true" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/major_100"
            android:background="@color/divider_color" />

        <!-- Payment -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textPayment"
            style="@style/Woo.Card.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/major_100"
            android:text="@string/payment" />

        <!-- Subtotal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                style="@style/Woo.Card.Body.High"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/subtotal" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textSubtotal"
                style="@style/Woo.Card.Body.High"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="end"
                tools:text="$40.00" />
        </LinearLayout>

        <!-- Charge taxes -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchChargeTaxes"
            style="@style/Woo.Card.Body.High"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/simple_payments_charge_taxes" />

        <!-- Tax -->
        <LinearLayout
            android:id="@+id/containerTaxes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textTaxLabel"
                style="@style/Woo.Card.Body.High"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/taxes" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textTax"
                style="@style/Woo.Card.Body.High"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="end"
                tools:text="$4.00" />
        </LinearLayout>

        <!-- Total -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/major_100"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textTotalLabel"
                style="@style/Woo.Card.Body.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/order_total" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textTotal"
                style="@style/Woo.Card.Body.Bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="end"
                tools:text="$44.00" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/major_100"
            android:background="@color/divider_color" />

        <!-- TODO nbradbury - customer provided note -->
        <!-- TODO nbradbury - take payment button -->
    </LinearLayout>
</ScrollView>
