<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Default colors
        -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/default_window_bg</item>
        <item name="colorButtonNormal">@color/light_gray</item>
        <!--
            Default text
        -->
        <item name="android:textAppearance">@style/Woo.TextAppearance</item>
        <!--
            Widgets
        -->
        <item name="tagViewStyle">@style/Woo.Tag</item>
        <item name="flowLayoutStyle">@style/Woo.FlowLayout</item>
        <item name="android:listViewStyle">@style/Woo.List</item>
    </style>

    <style name="Woo"/>
    <!--
        Default Text Style
    -->
    <style name="Woo.TextAppearance" parent="android:TextAppearance.DeviceDefault">
        <item name="android:textColor">@color/default_text</item>
    </style>
    <!--
        Default List Style
    -->
    <style name="Woo.List" parent="android:Widget.DeviceDefault.ListView">
        <item name="android:listDivider">@drawable/list_divider</item>
    </style>
    <!--
        Default TagView Style
    -->
    <style name="Woo.Tag" parent="android:Widget.DeviceDefault.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/tag_margin_top</item>
        <item name="android:layout_marginRight">@dimen/tag_margin_end</item>
        <item name="android:layout_marginBottom">@dimen/tag_margin_bottom</item>
        <item name="android:paddingStart">@dimen/tag_padding_start</item>
        <item name="android:paddingEnd">@dimen/tag_padding_end</item>
        <item name="android:paddingTop">@dimen/tag_padding_top</item>
        <item name="android:paddingBottom">@dimen/tag_padding_bottom</item>
        <!-- Custom View Attributes -->
        <item name="com.woocommerce.android:tagTextColor">@color/tagView_text</item>
        <item name="com.woocommerce.android:tagTextSize">@dimen/tag_text_size</item>
        <item name="com.woocommerce.android:tagColor">@color/tagView_bg</item>
        <item name="com.woocommerce.android:tagBorderColor">@color/tagView_border_bg</item>
    </style>
    <!--
        Default List Item Styles
    -->
    <style name="Woo.ListItem">
        <item name="android:paddingStart">@dimen/list_item_padding_start</item>
        <item name="android:paddingEnd">@dimen/list_item_padding_end</item>
        <item name="android:paddingTop">@dimen/list_item_padding_top</item>
        <item name="android:paddingBottom">@dimen/list_item_padding_bottom</item>
        <item name="android:background">@color/list_item_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/list_item_height</item>
        <item name="android:textAppearance">@style/Woo.TextAppearance.ListItem</item>
    </style>

    <style name="Woo.TextAppearance.ListItem">
        <item name="android:textColor">@color/list_item_text</item>
        <item name="android:textSize">@dimen/list_item_text_size</item>
    </style>

    <style name="Woo.TextAppearance.ListItem.Title">
        <item name="android:textColor">@color/list_item_text_title</item>
    </style>
    <!--
        Default List Item Header Styles
    -->
    <style name="Woo.ListHeader" parent="android:Widget.DeviceDefault.TextView">
        <item name="android:paddingStart">@dimen/list_item_padding_start</item>
        <item name="android:paddingEnd">@dimen/list_item_padding_end</item>
        <item name="android:background">@drawable/list_header_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_group_header_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">@style/Woo.TextAppearance.ListHeader</item>
    </style>

    <style name="Woo.TextAppearance.ListHeader">
        <item name="android:textColor">@color/List_header_text</item>
        <item name="android:textSize">@dimen/list_header_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--
        Default FlowLayout Style
    -->
    <style name="Woo.FlowLayout">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="com.woocommerce.android:horizontalSpacing">4dp</item>
        <item name="com.woocommerce.android:verticalSpacing">4dp</item>
    </style>
    <!--
        Order: List Style
    -->
    <style name="Woo.OrderList.Item" parent="Woo.ListItem"/>
    <style name="Woo.OrderList.Header" parent="Woo.ListHeader"/>
    <style name="Woo.OrderList.TextAppearance.Header" parent="Woo.TextAppearance.ListHeader"/>
    <style name="Woo.OrderList.TextAppearance.ListItem" parent="Woo.TextAppearance.ListItem"/>
    <style name="Woo.OrderList.TextAppearance.ListItem.Title" parent="Woo.TextAppearance.ListItem.Title"/>
    <style name="Woo.OrderList.TextAppearance.ListItem.Title.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- Tints input fields like checkboxes and text fields -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Color of the title text in the toolbar -->
        <item name="android:textColorPrimary">@color/wc_menu_title_text</item>
        <!-- Applies to views in their normal state. -->
        <item name="colorControlNormal">#FFFFFFFF</item>
        <!-- Applies to views in their activated state (i.e checked or switches) -->
        <item name="colorControlActivated">#FFCCCCCC</item>
        <!-- Applied to framework control highlights (i.e ripples or list selectors) -->
        <item name="colorControlHighlight">#3d96588a</item>
        <!-- Ripple effect when clicking items -->
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
    </style>

</resources>
